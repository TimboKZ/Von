doctype html
html
    head
        meta(charset='utf-8')

        meta(property='og:title', content=title)
        title= title

        link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/lightgallery@1.6.4/dist/css/lightgallery.min.css')

        meta(name='description', content=description)
        meta(property='og:description', content=description)

        style(type='text/css').
            body {
                font-family: Tahoma, sans-serif;
                background-color: #111;
                max-width: 960px;
                margin: 0 auto;
            }

            img {
                max-width: 100%;
                height: auto;
                vertical-align: middle;
            }

            .group {
                position: relative;
                margin: 200px 0;
                padding: 5px;
            }

            .group .images {
                display: flex;
                align-items: center;
                justify-content: center;
            }

            .group .image-wrapper {
                flex: 1.3;
            }

            .group .image {
                text-align: center;
                display: block;
                margin: 5px;
            }

            .group .source {
                text-align: center;
                padding-top: 20px;
                color: #666;
            }

            .group .source a {
                color: #777 !important;
            }

    body
        for group in groups
            .group
                .images(data-layout=group.layout)
                    for image in group.images
                        .image-wrapper(data-src=image.path, style='flex:'+image.flex)
                            a.image(href=image.path)
                                img(src=image.path)
                if group.source
                    div.source= 'Source: '
                        a(href=group.source)= group.source

        script(src='https://code.jquery.com/jquery-3.2.1.min.js')
        script(src='https://cdn.jsdelivr.net/combine/npm/lightgallery,npm/lg-autoplay,npm/lg-fullscreen,npm/lg-hash,npm/lg-pager,npm/lg-share,npm/lg-thumbnail,npm/lg-video,npm/lg-zoom')
        script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery-mousewheel/3.1.13/jquery.mousewheel.min.js')
        script(type='text/javascript').
            $(document).ready(function () {
                var images = $('.images');
                images.lightGallery({});
            });

